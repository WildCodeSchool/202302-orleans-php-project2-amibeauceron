<article>
	<header>
		<img class="img-dog" alt="image du chien" name="img" src="{{ (dog.image is not empty) ? '/uploads/' ~ dog.image : "/assets/images/dog-information.webp"}}">
	</header>
	<h2>{{ dog.name|title }}</h2>
	<div class="dog_info">
		<div>
			<span class="label">Genre :</span>
			{{ dog.gender == 'M' ? 'Male' : 'Femelle' }}
		</div>
		<div>
			<span class="label">Date de naissance :</span>
			{{ dog.birthdate|date("d/m/Y") }}
		</div>
		<div>
			<span class="label">LOF :</span>
			{{ dog.is_lof ? 'Oui' : 'Non' }}
		</div>
		<div>
			<span class="label">Identifiant :</span>
			{{ dog.identity_number }}
		</div>
	</div>
	<div class="content">
		{{ dog.description }}
	</div>
	<footer>
		<div>
			<svg class="people_icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-lines-fill" viewbox="0 0 16 16">
				<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z"/>
			</svg>
		</div>
		<div class="owner_info">
			<div>
				<span class="label">Propri√©taire :</span>
				{{ dog.owner|title }}</div>
			<div>
				<span class="label">Ville :</span>
				{{ dog.owner_city|title }}</div>
			<div>
				<span class="label">Mail :</span>
				{{ dog.owner_email }}</div>
		</div>
	</footer>
</article>