{% extends 'admin.html.twig' %}
{% block title %}
	{{ parent() }}
	| Modifier
{% endblock %}
{% block stylesheet %}
	{{ parent() }}
	<link rel="stylesheet" href="/assets/css/errors.css" type="text/css">
{% endblock %}
{% block content %}
	<main>
		<h1>Modifier le membre
			{{ member.firstname ~ ' ' ~ member.lastname }}</h1>
		<form action="" method="POST" enctype="multipart/form-data">
			<label for="job">Poste occup√©</label>
			<input type="text" name="job" id="job" required value="{{ member.job }}">

			<label for="email">Email</label>
			<input type="email" name="email" id="email" required value="{{ member.email }}">

			<label for="image">Ajouter une photo</label>
			<input type="file" id="image" name="image" accept="image/*" required>

			<button>Valider</button>
		</form>
	</main>
{% endblock %}
