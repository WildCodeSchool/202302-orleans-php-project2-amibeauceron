{% extends 'layout.html.twig' %}
{% block title %}
	{{ parent() }}
	| Gestion Actualités
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/admin.css" type="text/css">
{% endblock %}

{% block content %}
<main>
	<div class="datas-container">
		<h1>Gestion Des Actualités</h1>
		<table  role="grid">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Date</th>
					<th scope="col">Titre</th>
					<th scope="col"></th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				{% for actuality in actualities %}
					<tr>
						<th scope="row">{{ actuality.id }}</th>
						<td>{{ actuality.title }}</td>
						<td>{{ actuality.creation_date|date("d/m/Y H:i:s", "Europe/Paris") }}</td>
						<td>
							<form action="/administration/actualites/supprimer" method="POST">
								<input type="hidden" id="id" name="id" value="{{ actuality.id }}">
								<button class="primary outline" role="link">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
										<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
										<path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
									</svg>
								</button>
							</form>
						</td>
						<td>
							<form action="/administration/actualites/modifier" method="POST">
								<input type="hidden" id="id" name="id" value="{{ actuality.id }}">
								<button class="primary outline" role="link">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
										<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
									</svg>
								</button>
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr class="result-info">
					<th scope="col" colspan="5">Enregistrement(s) : {{ nbrActualities }}</th>
				</tr>
				<tr> 
					<td colspan="5"> 
						{% for page in pages %}
							<span class="step {{ currentPage == page ? 'active' : '' }}" >
								{% if(currentPage != page) %}
									<a href="/administration/actualites/?page={{ page }}">{{ page }}</a>
								{% else %}
									{{ page }}
								{% endif %}
							</span>
						{% endfor %}
					</td>
				</tr>
			</tfoot>
		</table>
	</div>
</main>
{% endblock %}
